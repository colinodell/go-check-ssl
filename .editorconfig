# https://editorconfig.org

root = true

# Global parameters for all files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go files
[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 8

# YAML file parameters
[*.{yaml,yml}]
indent_size = 2
